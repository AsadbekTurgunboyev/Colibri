<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:overScrollMode="never"
    tools:context=".auth.UserDetails">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="70dp"
    android:gravity="center_horizontal|left"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_asset_1asd"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salom"
        android:textSize="30sp"
        android:layout_marginRight="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="O'zingizni tanishtiring"
        android:textColor="@color/softqora"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/inputName"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="70dp"
        android:background="@null"
        android:hint="Ismingiz"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:maxLength="15"
        android:textColor="@color/softqora"
        android:textSize="16sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:background="#BDBDBD"/>

    <EditText
        android:id="@+id/inputUserName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@null"
        android:hint="Username"
        android:imeOptions="actionDone"
        android:layout_marginTop="40dp"
        android:importantForAutofill="no"
        android:maxLength="9"
        android:layout_marginRight="70dp"
        android:textColor="@color/softqora"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:background="#BDBDBD"/>

    <Button
        android:id="@+id/sendButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:layout_margin="30dp"
        android:background="@drawable/btn_bg"
        android:text="Jo'natish"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"/>

</LinearLayout>
</ScrollView>